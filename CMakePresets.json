{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 30,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "common",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}"
		},
		{
			"name": "win",
			"hidden": true,
			"architecture": {
				"value": "x64",
				"strategy": "external"
			}
		},
		{
			"name": "mac",
			"hidden": true,
			"toolset": {
				"value": "buildsystem=12",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_OSX_DEPLOYMENT_TARGET": "14.5",
				"CMAKE_APPLE_SILICON_PROCESSOR": "arm64",
				"CMAKE_OSX_ARCHITECTURES": "arm64"
			}
		},
		{
			"name": "debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "profile",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Profile"
			}
		},
		{
			"name": "project",
			"hidden": true
		},
		{
			"name": "win_vs_msvc",
			"hidden": false,
			"generator": "Visual Studio 17 2022",
			"inherits": [
				"common",
				"win",
				"project"
			],
			"toolset": {
				"value": "v143",
				"strategy": "external"
			}
		},
		{
			"name": "win_vs_clang",
			"hidden": false,
			"generator": "Visual Studio 17 2022",
			"inherits": [
				"common",
				"win",
				"project"
			],
			"toolset": {
				"value": "ClangCL",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_GENERATOR_TOOLSET": "ClangCL"
			}
		},
		{
			"name": "win_ninja_clang",
			"hidden": true,
			"generator": "Ninja",
			"inherits": [
				"common",
				"win",
				"project"
			],
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang-cl",
  				"CMAKE_CXX_COMPILER": "clang-cl"
			}
		},
		{
			"name": "win_ninja_clang_debug",
			"hidden": false,
			"inherits": [
				"win_ninja_clang",
				"debug"
			]
		},
		{
			"name": "win_ninja_clang_release",
			"hidden": false,
			"inherits": [
				"win_ninja_clang",
				"release"
			]
		},
		{
			"name": "win_ninja_clang_profile",
			"hidden": false,
			"inherits": [
				"win_ninja_clang",
				"profile"
			]
		},
		{
			"name": "mac_xcode",
			"hidden": false,
			"generator": "Xcode",
			"inherits": [
				"common",
				"mac",
				"project"
			]
		},
		{
			"name": "mac_ninja",
			"hidden": false,
			"generator": "Ninja",
			"inherits": [
				"common",
				"mac",
				"project"
			]
		},
		{
			"name": "mac_ninja_debug",
			"hidden": false,
			"inherits": [
				"mac_ninja",
				"debug"
			]
		},
		{
			"name": "mac_ninja_release",
			"hidden": false,
			"inherits": [
				"mac_ninja",
				"release"
			]
		},
		{
			"name": "mac_ninja_profile",
			"hidden": false,
			"inherits": [
				"mac_ninja",
				"profile"
			]
		}
	]
}
